<!-- app/views/surveys/new.html.erb -->
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Create New Survey</h1>

    <%= form_with model: @survey, class: "max-w-lg" do |form| %>
    <div class="mb-4">
        <%= form.label :question, "Survey Question", class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :question, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <% if @survey.errors[:question].any? %>
        <p class="text-red-500 text-xs italic"><%= @survey.errors[:question].first %></p>
        <% end %>
    </div>

    <div class="flex items-center gap-4">
        <%= form.submit "Create Survey", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Cancel", surveys_path, class: "text-gray-500 hover:text-gray-700" %>
    </div>
    <% end %>
</div>